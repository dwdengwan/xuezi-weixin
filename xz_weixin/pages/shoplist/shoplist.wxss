/* pages/shoplist/shoplist.wxss */
page{
  background: #fff;
}
/* 当前商品条目 */
.shop{
  padding:20rpx;
  border-bottom:1px solid #ddd;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
}
/* 商品图片 */
.shop-image{
  width:160rpx;
  height: 158rpx;
  margin-right: 20rpx;
  margin-top:10rpx;
}
/* 商品信息 */
.shop .shop-info{
  width: 50%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  font-size:12px; 
  color:#666;
  line-height: 1.5;
}
/* 店铺名称 */
.shop .shop-title{
  font-size: 14px;
  color: #333;
  width: 380rpx;
}
