/* pages/message/message.wxss */
/* 1.组件的背景色灰色 */
page{
  background: #f1f1f1;
}
/* 2.卡片 */
.card{
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius:20rpx;/*圆角*/
  margin: 60rpx 20rpx;/*外补丁*/
  padding:30rpx;/*内补丁*/
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
}
.card .card-title{
  font-size:20px;
  margin-bottom:20rpx; 
}
.card .card-date{
  font-size:14px;
  color:#aaa;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
}
.card .card-image{
  width:100%;
  height: 300rpx;
}
.card .card-desc{
  font-size:16px;
  color:#333;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
  margin: 20rpx 0;
}
.card .card-read{
  font-size:14px;
  color:#666;
}