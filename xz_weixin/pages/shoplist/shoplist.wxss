/* 评分 */
.shop .shop-star{
  width: 22%;
  position: relative;
}
.shop .shop-star .star-after,.shop .shop-star .star-before{
  position: absolute;
}
.shop .shop-star .star-after{
  color:#e2e2e2;
}
.shop .shop-star .star-before{
  color:#f19e38;
  overflow: hidden;
}